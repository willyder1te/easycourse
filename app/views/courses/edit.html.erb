

  <div class="form-banner" style="background-image: linear-gradient(-225deg, rgba(50,50,50,0.5) 0%, rgba(50,50,50,0.5) 80%), url('https://images.unsplash.com/photo-1526403223670-2aa44aaface2?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=9d538f2a10f174652138865746bcda78&auto=format&fit=crop&w=1050&q=80');">

    <div class="white-box">
      <div class="form-header">

      <h2> <%=@course.name %></h2>
      <h4>Edit your Course</h4>
    </div>
    <div class="form">
      <%= render "shared/simple_form_for_course", title: "Edit your Course #{@course.name}", button_text: "Edit Course" %>
