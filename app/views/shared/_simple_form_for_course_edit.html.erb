<%= simple_form_for @course do |f| %>
  <%= f.input :name, class: "form-control" %>
  <%= f.input :category, class: "form-control" %>
  <%= f.input :start_date, class: "form-control" %>
  <%= f.input :end_date, class: "form-control" %>
  <%= f.input :description, class: "form-control" %>
  <%= f.input :location, class: "form-control" %>
  <%= f.input :price, class: "form-control" %>
  <%= f.input :capacity, class: "form-control" %>
  <%= f.input :prerequisite, class: "form-control" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Edit Your Course", class: "btn-primary" %>
<% end %>

<div class="delete-section">
<%= link_to "Cancel Course", course_path(@course),
        method: :delete,
        data: { confirm: "Are you sure that you want to cancel your Course #{@course.name}?"},
        class: "btn btn-danger btn-md" %>
</div>
