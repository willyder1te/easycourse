<%= simple_form_for @course do |f| %>
  <%= f.input :name, class: "form-control" %>
  <%= f.input :category, class: "form-control" %>
  <%= f.input :start_date, class: "form-control" %>
  <%= f.input :end_date, class: "form-control" %>
  <%= f.input :description, class: "form-control" %>
  <%= f.input :location, input_html: { class: 'location-autocomplete' } %>
  <%= f.input :price, class: "form-control" %>
  <%= f.input :capacity, class: "form-control" %>
  <%= f.input :prerequisite, class: "form-control" %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.submit "Add the Course!", class: "btn-primary" %>
<% end %>
